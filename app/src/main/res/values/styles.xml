<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.Priceelist.TextInputLayout.Title" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:minHeight">32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">textAutoComplete|textAutoCorrect|textCapSentences|text|textShortMessage</item>
        <item name="android:padding">2dp</item>
        <item name="android:hint">@string/app_name</item>
        <item name="boxStrokeColor">@color/gray_001</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_corner_radius</item>
    </style>

    <style name="Widget.Priceelist.TextView.Title2" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/primary1</item>
    </style>

    <style name="Widget.Priceelist.TextInput.Serial" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="Widget.Priceelist.TextInput.Items2" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/gray_001</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Priceelist.TextInput.Amounts2" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColorHint">@color/gray_001</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="Widget.Priceelist.TextInput.Units2" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/gray_001</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Priceelist.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:buttonCornerRadius" tools:targetApi="p">10dp</item>
    </style>
</resources>